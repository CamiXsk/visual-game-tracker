const mongoose = require('mongoose');

const gameSchema = new mongoose.Schema({
  name: {
    type: String,
    required: true
  },
  platform: {
    type: String,
    required: true
  },
  hoursPlayed: {
    type: Number,
    default: 0
  },
  image: {                 // ðŸ‘ˆ AÃ‘ADE ESTA PARTE
    type: String,
    default: ""            // valor vacÃ­o si no se envÃ­a imagen
  },
  createdAt: {
    type: Date,
    default: Date.now
  }
});

module.exports = mongoose.model('Game', gameSchema);
